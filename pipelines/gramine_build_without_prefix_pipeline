pipeline {
    agent
    {
        node {
                label 'master'
                customWorkspace "${env.JobPath}"
              }
    }
    stages
    {
        stage ('Parallel invocation of test jobs') {
            parallel {
                stage ('Invoke Ubuntu 24.04 with Kernel 6.8 Graphene SGX Suite') {
                    steps {
                        build job: 'local_ci_graphene_sgx_build_without_prefix', parameters: [[$class: 'StringParameterValue', name: 'base_os', value: 'ubuntu24.04'], [$class: 'NodeParameterValue', name: 'node_label', labels: ['graphene_22.04_6.2'], nodeEligibility: [$class: 'AllNodeEligibility']]], propagate: true, wait: true
                    }
                }

                stage ('Invoke CentOS 9 with Kernel 6.7 Graphene SGX Suite') {
                    steps {
                        build job: 'local_ci_graphene_sgx_build_without_prefix', parameters: [[$class: 'StringParameterValue', name: 'base_os', value: 'centos9'], [$class: 'NodeParameterValue', name: 'node_label', labels: ['graphene_22.04_6.2'], nodeEligibility: [$class: 'AllNodeEligibility']]], propagate: true, wait: true
                    }
                }
            }
        }
    }
}
