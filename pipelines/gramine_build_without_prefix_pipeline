pipeline {
    agent
    {
        node {
                label 'master'
                customWorkspace "${env.JobPath}"
              }
    }
    stages
    {
        stage ('Parallel invocation of test jobs') {
            parallel {
                stage ('Invoke Ubuntu 22.04 with Kernel 6.2 Graphene SGX Suite') {
                    steps {
                        build job: 'local_ci_graphene_sgx_build_without_prefix', parameters: [[$class: 'StringParameterValue', name: 'base_os', value: 'ubuntu22.04'], [$class: 'NodeParameterValue', name: 'node_label', labels: ['graphene_24.04_6.8'], nodeEligibility: [$class: 'AllNodeEligibility']]], propagate: true, wait: true
                    }
                }

                stage ('Invoke CentOS 10 with Kernel 6.12 Graphene SGX Suite') {
                    steps {
                        build job: 'local_ci_graphene_sgx_build_without_prefix', parameters: [[$class: 'StringParameterValue', name: 'base_os', value: 'centos10'], [$class: 'NodeParameterValue', name: 'node_label', labels: ['gramine_centos_stream10'], nodeEligibility: [$class: 'AllNodeEligibility']]], propagate: true, wait: true
                    }
                }
            }
        }
    }
}
