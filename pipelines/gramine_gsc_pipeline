pipeline {
    agent
    {
        node {
                label 'master'
                customWorkspace "${env.JobPath}"
              }
    }
    stages {
        stage ('Parallel invocation of test jobs') {
            parallel {
                stage ('Invoke GSC with Ubuntu 22.04') {
                    steps {
                        build job: 'local_ci_graphene_gsc', parameters: [[$class: 'NodeParameterValue', name: 'node_label', labels: ['graphene_22.04_6.2'], nodeEligibility: [$class: 'AllNodeEligibility']], [$class: 'StringParameterValue', name: 'gsc_repo', value: gsc_repo], [$class: 'StringParameterValue', name: 'gsc_branch', value: gsc_branch], [$class: 'StringParameterValue', name: 'distro_ver', value: "ubuntu:22.04"]], propagate: true, wait: true
                    }
                }

                stage ('Invoke GSC with CentOS Stream 10') {
                    steps {
                        build job: 'local_ci_graphene_gsc', parameters: [[$class: 'NodeParameterValue', name: 'node_label', labels: ['gramine_centos_stream10'], nodeEligibility: [$class: 'AllNodeEligibility']], [$class: 'StringParameterValue', name: 'gsc_repo', value: gsc_repo], [$class: 'StringParameterValue', name: 'gsc_branch', value: gsc_branch], [$class: 'StringParameterValue', name: 'distro_ver', value: "quay.io/centos/centos:stream10"]], propagate: true, wait: true
                    }
                }
            }
        }
    }
}
